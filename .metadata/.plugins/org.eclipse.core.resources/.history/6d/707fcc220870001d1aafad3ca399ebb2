package tugasBesar;
import java.util.Scanner;
public class RickyPutraSardika_07 
{
	public static void main(String args[])
	{
		Scanner ricky = new Scanner(System.in);
		int angka_ricky, kebalikanAngka_ricky = 0;
		
	    System.out.println("Masukkan angka = ");
	    angka_ricky = ricky.nextInt();
	    
	    while( angka_ricky != 0 )
	    {
	       kebalikanAngka_ricky = kebalikanAngka_ricky * 10;
	       kebalikanAngka_ricky = kebalikanAngka_ricky + angka_ricky % 10;
	       angka_ricky = angka_ricky / 10;
	    }
	    System.out.println("Kebalikan dari angka " + angka_ricky + " adalah " + kebalikanAngka_ricky);
	}
}